<Window x:Class="RedBicicletas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedBicicletas"
        mc:Ignorable="d"
        Title="Prestamo de Bicicletas" Height="450" Width="800"
        Background="AliceBlue"
        ResizeMode="NoResize"
        WindowState="Normal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>
        <Image Source="/imagenes/fondo.jpg" HorizontalAlignment="Center" VerticalAlignment="Stretch" Grid.Row="0" Height="1000" Grid.RowSpan="2"/>
        <Label Background="White" Opacity="0.2"/>
        <Label Content="RED DE BICICLETAS" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>
       
        <Border Grid.Row="1" HorizontalAlignment="Center" BorderBrush="Beige" Margin="0,0,0,0" BorderThickness="2" CornerRadius="5" Background="White" Height="300" VerticalAlignment="Top">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Ingresar:" Grid.Row="0" Grid.Column="0" FontSize="25" Margin="10,15,0,15" Foreground="Black" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
               
                <Image Source="/imagenes/social.png" Width="30" Height="30" Grid.Row="1" Grid.Column="0" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <TextBox x:Name="txtUsuario" Width="200" Height="40" Grid.Row="1" Grid.Column="1" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#bdbdbd" Foreground="Black"/>

                <Image Source="/imagenes/password.png" Width="30" Height="30" Grid.Row="2" Grid.Column="0" Margin="10,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <TextBox x:Name="txtContraseña" Width="200" Height="40" Grid.Row="2" Grid.Column="1" Margin="0,20,10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#bdbdbd"/>

                <Button Content="INGRESAR" x:Name="btnIngresar" Height="30" Grid.Row="3" Grid.Column="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightBlue" Grid.ColumnSpan="2" Click="btnIngresar_Click"/>

                <Button Content="REGISTRARSE" x:Name="btnRegistar" Height="30" Grid.Row="4" Grid.Column="0" Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightBlue" Grid.ColumnSpan="2" Click="btnRegistar_Click"/>



            </Grid>       
        </Border>
       
    </Grid>
</Window>
